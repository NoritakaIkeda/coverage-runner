#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Validate new files meet quality standards
echo "ğŸ” Validating all TypeScript files..."
node scripts/validate-new-files.js
if [ $? -ne 0 ]; then
  echo "âŒ File validation failed!"
  exit 1
fi

# Validate workflow files
echo "âš™ï¸  Validating workflow files..."
node scripts/validate-workflow.js
if [ $? -ne 0 ]; then
  echo "âŒ Workflow validation failed!"
  exit 1
fi

# Run TypeScript type checking
echo "ğŸ“ Type checking..."
npm run typecheck
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript type checking failed!"
  exit 1
fi

# Run ESLint with strict error checking (warnings allowed)
echo "ğŸ§¹ Linting..."
npm run lint 2>&1 | tee lint-output.log || true
if grep -q " error " lint-output.log; then
  echo "âŒ ESLint errors detected!"
  cat lint-output.log
  rm lint-output.log
  exit 1
else
  echo "âœ… ESLint passed (warnings are acceptable)"
fi
rm -f lint-output.log

# Build validation (lighter than full test suite for pre-commit)
echo "ğŸ”§ Build validation..."
npm run build
if [ $? -ne 0 ]; then
  echo "âŒ Build failed!"
  exit 1
fi

# Auto-format and fix staged files
echo "ğŸ¨ Auto-formatting staged files..."
npx lint-staged
if [ $? -ne 0 ]; then
  echo "âŒ Auto-formatting failed!"
  exit 1
fi

echo "âœ… All pre-commit checks passed!"
echo "ğŸ¯ Quality gates: âœ… Files âœ… Workflows âœ… Types âœ… Lint âœ… Tests âœ… Format"