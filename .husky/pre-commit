#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Validate new files meet quality standards
echo "🔍 Validating all TypeScript files..."
node scripts/validate-new-files.js
if [ $? -ne 0 ]; then
  echo "❌ File validation failed!"
  exit 1
fi

# Validate workflow files
echo "⚙️  Validating workflow files..."
node scripts/validate-workflow.js
if [ $? -ne 0 ]; then
  echo "❌ Workflow validation failed!"
  exit 1
fi

# Run TypeScript type checking
echo "📝 Type checking..."
npm run typecheck
if [ $? -ne 0 ]; then
  echo "❌ TypeScript type checking failed!"
  exit 1
fi

# Run ESLint with strict error checking
echo "🧹 Linting..."
npm run lint 2>&1 | tee lint-output.log
if grep -q "error" lint-output.log; then
  echo "❌ ESLint errors detected!"
  cat lint-output.log
  rm lint-output.log
  exit 1
fi
rm -f lint-output.log

# Run tests
echo "🧪 Running tests..."
npm run test
if [ $? -ne 0 ]; then
  echo "❌ Tests failed!"
  exit 1
fi

# Run lint-staged for staged files
npx lint-staged

echo "✅ All pre-commit checks passed!"
echo "🎯 Quality gates: ✅ Files ✅ Workflows ✅ Types ✅ Lint ✅ Tests"