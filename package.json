{
  "name": "coverage-runner",
  "version": "1.0.0",
  "description": "A tool for running and managing code coverage analysis",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "coverage-runner": "./dist/bin/coverage-runner.js"
  },
  "directories": {
    "doc": "docs",
    "lib": "lib",
    "test": "test"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts bin/**/*.ts test/**/*.ts",
    "lint:fix": "eslint src/**/*.ts bin/**/*.ts test/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts bin/**/*.ts test/**/*.ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:node": "node --test test/**/*.test.ts || vitest run",
    "prepare": "husky",
    "validate:all": "node scripts/validate-new-files.js && node scripts/validate-workflow.js",
    "quality:check": "npm run validate:all && npm run typecheck && npm run lint && npm run test",
    "quality:audit": "npm run quality:check && echo 'âœ… Full quality audit passed'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NoritakaIkeda/coverage-runner.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NoritakaIkeda/coverage-runner/issues"
  },
  "homepage": "https://github.com/NoritakaIkeda/coverage-runner#readme",
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/istanbul-lib-coverage": "^2.0.6",
    "@types/istanbul-lib-report": "^3.0.3",
    "@types/istanbul-reports": "^3.0.4",
    "@types/lcov-parse": "^1.0.2",
    "@types/node": "^24.0.10",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "commander": "^14.0.0",
    "execa": "^9.6.0",
    "glob": "^11.0.3",
    "istanbul-lib-coverage": "^3.2.2",
    "istanbul-lib-report": "^3.0.1",
    "istanbul-reports": "^3.1.7",
    "lcov-parse": "^1.0.0",
    "xml2js": "^0.6.2"
  }
}
